@*Not really needed for this case but eh*@

@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3 p-1 row"> 
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" /> @*user should not be able to edit*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-6">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" /> @*consuming partial view (script related) which is for client-side validation. In client-side validations, the related page wont refresh unlike server-side validations*@
    }
}