@*enable hot reload for hot reloads. Yeah*@
@model List<Category>
<h1>Category List</h1>
<br>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model.OrderBy(category => category.DisplayOrder))
        {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>